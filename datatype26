// Interface with four methods
interface ArithmeticOperations {
    int add(int a, int b);
    int sub(int a, int b);
    int mul(int a, int b);
    int div(int a, int b);
}

// Implementing class providing implementation for all methods
class Calculator implements ArithmeticOperations {
    @Override
    public int add(int a, int b) {
        return a + b;
    }

    @Override
    public int sub(int a, int b) {
        return a - b;
    }

    @Override
    public int mul(int a, int b) {
        return a * b;
    }

    @Override
    public int div(int a, int b) {
        if (b == 0) {
            throw new ArithmeticException("Division by zero is not allowed");
        }
        return a / b;
    }
}

public class Main {
    public static void main(String[] args) {
        Calculator calculator = new Calculator();

        // Testing the implemented methods
        System.out.println("Addition: " + calculator.add(10, 5));
        System.out.println("Subtraction: " + calculator.sub(10, 5));
        System.out.println("Multiplication: " + calculator.mul(10, 5));
        System.out.println("Division: " + calculator.div(10, 5));
    }
}
